<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@drawable/home_bg">
    <LinearLayout
        android:id="@+id/textviewLayout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/topTextView"
        android:layout_alignParentStart="false"
        android:layout_alignParentTop="true"
        >
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/bayer_logo"
            android:id="@+id/img_logo"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp" />

        <com.bayer.turfid.CustomTextViewBold
            android:id="@+id/title"
            android:layout_width="fill_parent"

            android:text="Identify"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_height="60dp"
            android:paddingRight="60dp" />
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/identifyscreen_background"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp">

        <ImageView
            android:layout_centerHorizontal="false"
            android:id="@+id/imageView2"
            android:src="@drawable/camera"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="100dp" />

        <com.bayer.turfid.CustomTextViewBold
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView2"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:paddingBottom="15dp"
            android:text="@string/identifyCam"
            android:id="@+id/alerttxtview"
            android:textColor="#040404"
            android:gravity="center"
            android:textSize="16sp"
            android:paddingTop="15dp"
            android:layout_gravity="center"
            android:paddingLeft="7dp"
            android:paddingRight="7dp" />

        <com.bayer.turfid.CustomButton
            android:layout_below="@+id/alerttxtview"
            android:layout_centerHorizontal="true"
            android:text="OK >"
            android:id="@+id/ok"
            android:background="@drawable/saved_area_button"
            android:textColor="#ffffff"
            android:gravity="center"
            android:textStyle="normal|bold"
            android:textSize="17sp"
            android:layout_height="30dp"
            android:layout_width="120dp"
            android:layout_gravity="center" />

        <com.bayer.turfid.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView2"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:paddingBottom="15dp"
            android:text="@string/alert2Ident"
            android:id="@+id/alerttxtview2"
            android:textColor="#040404"
            android:gravity="center"
            android:textSize="15sp"
            android:paddingTop="15dp"
            android:layout_gravity="center"
            android:layout_marginTop="35dp" />
    </LinearLayout>
</LinearLayout>