<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
	android:background="@drawable/home_bg">
	<LinearLayout
		android:id="@+id/textviewLayout"
		android:orientation="horizontal"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="@color/topTextView"
		android:layout_alignParentStart="false"
		android:layout_alignParentTop="true"
		>
		<ImageView
			android:layout_width="40dp"
			android:layout_height="40dp"
			android:src="@drawable/bayer_logo"
			android:id="@+id/img_logo"
			android:layout_gravity="center"
			android:layout_marginLeft="20dp" />

		<com.bayer.turfid.CustomTextViewBold
			android:id="@+id/title"
			android:layout_width="fill_parent"

			android:text="Identify"
			android:textColor="#ffffff"
			android:textSize="20dp"
			android:textStyle="bold"
			android:gravity="center"
			android:layout_height="60dp"
			android:paddingRight="60dp" />
	</LinearLayout>


	<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
	android:background="@color/button_material_light"
	android:layout_margin="20dp"
	android:layout_gravity="center"
	android:gravity="center"
	android:padding="10dp">
	<com.bayer.turfid.CustomTextView
		android:id="@+id/count"
		android:text="@string/count"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentTop="true"
		android:layout_centerHorizontal="true"
		android:textColor="@android:color/black"
		android:gravity="center"
		android:textAlignment="center"
		android:textAppearance="?android:attr/textAppearanceLarge"

		android:textSize="16sp" />
	<com.bayer.turfid.CustomTextView
         android:id="@+id/camera"
		android:layout_below="@id/count"
        android:text="@string/identifyTxt"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_alignParentTop="false"
         android:layout_centerVertical="true"
         android:textColor="@android:color/black"
		android:textAlignment="center"
         android:layout_centerHorizontal="true"


        android:paddingTop="5dp"
		android:gravity="center"
		android:textSize="10sp" />

	<ImageView
android:id="@+id/cameraImg"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_centerInParent="true"
android:layout_gravity="center"
android:layout_below="@+id/camera"
android:layout_above="@+id/submit"
android:layout_marginTop="15dp"
android:scaleType="fitCenter"
        android:layout_marginBottom="120dp" />
	<com.bayer.turfid.CustomTextView
		android:id="@+id/ques"

		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textAppearance="?android:attr/textAppearanceMedium"
		android:layout_marginTop="35dp"
		android:text="Would you like to take another photo?"
		android:layout_above="@+id/yes"

		android:layout_centerHorizontal="true"
		android:textColor="#030303"
		android:textSize="13sp" />

	<com.bayer.turfid.CustomButton
		 android:id="@+id/no"
		android:layout_below="@id/ques"
	     android:layout_centerHorizontal="false"
		android:layout_alignParentLeft="true"
	     android:layout_alignParentBottom="true"
	     android:layout_marginBottom="20dp"
		android:layout_marginTop="10dp"
		android:text="No >"
		android:textColor="@color/abc_primary_text_material_dark"
		android:textStyle="bold"
		android:background="@drawable/button_no"
		android:textSize="17sp"
		android:layout_width="80dp"
		android:layout_height="30dp" />

	<com.bayer.turfid.CustomButton
		android:text="Yes >"

		android:layout_alignParentRight="true"
		android:layout_centerHorizontal="false"
		android:layout_alignParentBottom="true"
		android:id="@+id/yes"
		android:layout_marginBottom="20dp"
		android:background="@drawable/button_background"
		android:textColor="@color/abc_primary_text_material_dark"
		android:textStyle="bold"
		android:layout_marginTop="10dp"
		android:layout_width="80dp"
		android:layout_height="30dp"
		android:textSize="17sp" />


</RelativeLayout>
</LinearLayout>
