<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SprayActivity_Result1"
    android:orientation="vertical"
    android:background="@drawable/home_bg">
    <LinearLayout
        android:id="@+id/textviewLayout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/topTextView"
        android:layout_alignParentStart="false"
        android:layout_alignParentTop="true"
        >
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/bayer_logo"
            android:id="@+id/img_logo"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp" />

        <com.bayer.turfid.CustomTextViewBold
            android:id="@+id/title"
            android:layout_width="fill_parent"
            android:text="Spray Calculation"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:textStyle="bold"
            android:gravity="center"
            android:paddingRight="60dp"
            android:layout_height="60dp" />
    </LinearLayout>


    <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_below="@id/textviewLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="90dp"
            android:orientation="vertical"
            android:layout_alignParentTop="false"
            android:layout_alignParentLeft="false"
            android:layout_alignParentBottom="false"
            android:layout_alignParentRight="false"
            android:layout_alignWithParentIfMissing="false"
        android:background="@drawable/teviewcorners"
        android:paddingTop="15dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/imageView4"
                android:layout_gravity="center"
                android:background="@drawable/tick" />

            <com.bayer.turfid.CustomTextViewBold
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Result 1"
                android:id="@+id/result1txt"
                android:layout_gravity="center"
                android:textColor="#555555"
                android:textSize="22dp"
                android:textStyle="normal|bold"
                android:layout_marginTop="5dp" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                >



                    <com.bayer.turfid.CustomTextView
                        android:layout_width="wrap_content"
                        android:text="Target Nozzle"
                        android:layout_gravity="left"
                        android:id="@+id/targettxt"
                        android:textColor="#464646"
                        android:layout_weight="1"
                        android:layout_height="25dp"
                        android:textSize="17sp"
                        android:layout_marginLeft="10dp"
                         />





                    <com.bayer.turfid.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_gravity="left"
                        android:text="Output Required"
                        android:layout_marginLeft="10dp"
                        android:id="@+id/outputxt"
                        android:textColor="#464646"
                        android:layout_weight="1"
                        android:textSize="17sp"
                         />


                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:paddingBottom="5dp"

                    android:background="@drawable/box"
                    android:layout_marginTop="10dp">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"

                    android:gravity="center_vertical">

                    <com.bayer.turfid.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Litres/Minute:"
                        android:id="@+id/literstxt"
                        android:textColor="#555555"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:gravity="center"
                        android:layout_marginLeft="10dp" />

                    <com.bayer.turfid.CustomTextViewBold
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="0000"
                        android:id="@+id/result1Val"
                        android:textColor="#555555"
                        android:textStyle="bold"
                        android:paddingLeft="10dp"
                        android:textAlignment="center" />
                </LinearLayout>

                <com.bayer.turfid.CustomButton
                    android:text="Continue >"
                    android:id="@+id/resultcontinuebtn"
                    android:background="@drawable/button_background"
                    android:textSize="@dimen/txt"
                    android:textColor="#FEFEFE"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:layout_gravity="right"
                    android:layout_marginRight="10dp"
                    android:layout_width="120dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="13dp" />
</LinearLayout>
            </LinearLayout>

        </LinearLayout>


    <LinearLayout
        android:orientation="vertical"
        android:background="@color/background_floating_material_dark"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="center_vertical"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp" >

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/leftproduct"
                android:src="@drawable/back_calc" />
            <com.bayer.turfid.CustomTextViewBold
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/step4"
                android:id="@+id/step5"
                android:textSize="15dp"
                android:textAlignment="textEnd"
                android:gravity="center"
                android:textColor="#707070"
                android:layout_weight="0.5" />

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
